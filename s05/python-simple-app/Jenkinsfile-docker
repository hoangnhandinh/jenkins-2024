pipeline {
        agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: python
    image: python:3.9.18-alpine
    command:
    - cat
    tty: true
"""
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'pip3 install -r s05/python-simple-app/requirements.txt --ignore-installed'
            }
        }

        stage('run') {
            steps {
                sh 'python3 s05/python-simple-app/app.py &'
            }
        }
    }
}
